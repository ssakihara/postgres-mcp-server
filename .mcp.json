{
  "mcpServers": {
    "pms": {
      "command": "docker",
      "args": [
        "run",
        "--pull", "always",
        "-i",
        "--rm",
        "-e",
        "PGDATABASE",
        "-e",
        "PGHOST",
        "-e",
        "PGPORT",
        "-e",
        "PGUSER",
        "-e",
        "PGPASSWORD",
        "ghcr.io/ssakihara/postgres-mcp-server:latest"
      ],
      "env": {
        "PGDATABASE": "test_db",
        "PGHOST": "host.docker.internal",
        "PGPORT": "5432",
        "PGUSER": "postgres",
        "PGPASSWORD": "postgres"
      }
    }
  }
}
